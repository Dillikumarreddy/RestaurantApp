@using RestaurantApp.Models


@model List<RestaurantApp.Models.Restaurant>
 @{var count=Model.Count;}  

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <link rel="stylesheet" href="css/bootstrap.min.css">
  <title>Bootstrap</title>
  <style>
      body {

    margin-top: 80px; 
    background:url(https://images.pexels.com/photos/64208/pexels-photo-64208.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2);

}

</style>
</head>

<body>


<div class="container">  

    <div class="row align-items-start">


    @for(int i=0;i<count;i++)
        {

        
    <section class="card-deck mb-5" id="drwinthrop" style="width: 18rem;" >
    <div class="card-body">

        <img class="card-img img-fluid img-thumbnail"  src="~/images/@Model[i].CoverPhoto" alt="@Model[i].RestaurantName"  style="width:100%" asp-append-version="true">
        <h2 class="card-title">@Model[i].RestaurantName</h2>
        <h5 class="card-subtitle">Contact:@Model[i].ContactName</h5>
        <p class="card-text">Contact:@Model[i].RestaurantPhone</p>
        <a class="btn btn-primary " href="/Items/ItemsList/@Model[i].RestaurantId">SeeItemsOffering</a>
        
    </div>
  </section>


   
        }

        </div>   @* row div*@
       
  

</div><!-- content container -->

<script src="js/jquery.slim.min.js"></script>
<script src="js/popper.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</body>
</html>

