@{
    ViewData["Title"] = "Home Page";
}


<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
<style>
*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
.inner{
    height: 75%;
    width: 70%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border-radius: 10px;
    box-shadow: 10px 10px 68px -6px rgba(0,0,0,0.5);
    display: flex;
    justify-content: space-between;
}

.photo{
    width: 50%;
    height: 100%;
    padding: 0px;
}
.photo img{
    border-radius: 5px 0px 0px 5px;
    width: 100%;
    height: 100%;
}
.user-form{
    background: transparent;
    padding: 50px;
    width: 50%;
    height: 100%;
    border-radius: 0px 10px 10px 0px;
}
.user-form h3{
    color: #fff;
    padding: 20px 0;
    font-weight: 700;
}
.user-form h4{
    color: #fff;
    padding: 20px 0;
    font-weight: 700;
}
.user-form i{
    position: absolute;
    color: blue;
    margin: 25px 10px;
}

input{
    width: 100%;
    border-radius: 30px;
    border: none;
    height: 3em;
    font-size: 15px;
    margin: 10px 0;
    padding: 0 30px;
}
.safety{
    width: 100%;
    display: flex;
    justify-content: space-between;
    color: #fff;
    font-size: 12px;
    margin-top: 10px;
    padding: 0 5px;
}
.line{
    height: 6px;
    border-radius: 20px;
    width: 20%;
    background: #fff;
    margin: 5px;
}
span:nth-child(2){
    background-color: #fffc00;
}
span:nth-child(3){
    background-color: #fffc00;
}
.action-btn{
    width: 100%;
    display: flex;
    margin: 30px 0;
}
.btn{
    border: 1px solid #fff;
    color: #fff;
    padding: 10px;
    background: transparent;
    border-radius: 20px;
    width: 50%;
    margin: 0 10px;
    cursor: pointer;
    font-size: 16px;
}
.primary{
    border: none;
    background: linear-gradient(45deg, rgba(222,197,5,1) 24%, rgba(255,107,0,1) 100%);
}
body{
    background:url(https://images.pexels.com/photos/64208/pexels-photo-64208.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2);
}

</style>
</head>


<body>
        <div class="inner">
            <div class="photo">
                <img src="https://images.pexels.com/photos/370984/pexels-photo-370984.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2">
            </div>
            <div class="user-form">
                <h3>Welcome to Sviggy!</h3>
                <h4>Delicious Guranteed.<span> &#128523;</span></h4>
                <form asp-action="RestaurantsInCity" asp-controller="City" method="get">
                    <i class="fa fa-search" aria-hidden="true"></i>
                    <input type="text" placeholder="Search Restaurant by City!" name="city">                 
                    <div class="action-btn">
                        <button type="submit" class="btn primary">Search</button>
                    </div>
                </form>
                

            </div>
        </div>
</body>



</html>