@{
    Layout = "_GetByFilter";
}
@using RestaurantApp.Models


@model List<RestaurantApp.Models.FoodItem>
 @{var count=Model.Count;}  

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <link rel="stylesheet" href="css/bootstrap.min.css">
</head>
<body>

@*
<p>in @Model[0].ItemDescription</p>
*@
<div class="container">  
        <div class="row align-items-start">

    @for(int i=0;i<count;i++)
        {


          <section class="card-deck mb-5" id="foodItems" style="width: 18rem;"> 
    <div class="card-body">
        <img class="card-img img-fluid"  src="~/images/@Model[i].ImgSource" alt="@Model[i].ItemName" >
        <h2 class="card-title">@Model[i].ItemName</h2>
        <h5 class="card-subtitle">Price:@Model[i].ItemPrice</h5>
        <p class="card-text">@Model[i].ItemDescription</p>

    </div>   @*cardBodyClassDIV*@
  </section>
   
        }
       </div>
  

</div><!-- content container -->


<script src="js/jquery.slim.min.js"></script>
<script src="js/popper.min.js"></script>
<script src="js/bootstrap.min.js"></script>
</body>
</html>

